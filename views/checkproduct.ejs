<!DOCTYPE html>
<html lang="en">
<%- include('includes/head'); %>

    <body>
        <%- include('includes/navadmin'); %>
            <div class="container">
                <% if (message.type) { %>
                    <div class="alert alert-<%= message.type%>" role="alert">
                        <%= message.body %>
                    </div>
                    <% } %>
                        <% for(var i = 0; i < products.length; i++) { %>
                            <table>
                                <tr>
                                    <td>
                                        <%= i + 1 %>
                                    </td>
                                    <td>
                                        <%= products[i].img %>
                                    </td>
                                    <td>
                                        <%= products[i].name %>
                                    </td>
                                    <td>
                                        <%= products[i].description %>
                                    </td>
                                    <td>
                                        <%= products[i].price %>
                                    </td>
                                    <td>
                                        <a href="/updateproduct?id=<%= products[i]._id%>" class="btn border-shadow update">
                                        Update<span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>
                                    </a>
                                        <a class="btn border-shadow delete" data-id=<%=products[i]._id%> >
                                        Delete<span class="text-gradient"><i class="fas fa-times"></i></span>
                                    </a>
                                    </td>

                                </tr>

                            </table>
                            <% } %>
            </div>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js " integrity="sha512-bLT0Qm9VnAYZDflyKcBaQ2gg0hSYNQrJ8RilYldYQ1FxQYoCLtUjuuRuZo+fjqhx/qtq/1itJ0C2ejDxltZVFg==" crossorigin=" anonymous "></script>
            <script src="/javascript/index.js "></script>
            <%- include('includes/footer'); %>

    </body>

</html>