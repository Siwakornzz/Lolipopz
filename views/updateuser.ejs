<!DOCTYPE html>
<html lang="en">
<%- include('includes/head'); %>

    <body>
        <%- include('includes/navadmin'); %>
        <main id="site-main">
            <div class="container">
                <br><br><br>
                <div class="row">
                <div class="card" width=30rem>
                    <br>
                        <h3 class ='card-title'> &nbsp; Update User</h3>
                        <hr>
                        <form method="POST" id="updateproduct">
                            <div class="newproduct">

                                <div class="form-group">
                                    <p>Username :
                                        <input type="hidden" name="id" value=<%=users._id %>>
                                        <input type="text" name="username" value="<%= users.username %>" placeholder="">
                                    </p>
                                </div>
                                <div class="form-group">
                                    <p>Email : 
                                        <input type="text" name="email" value="<%= users.email%>" placeholder="">
                                    </p>
                                </div>
                                <div class="form-group">
                                    <p>Point : 
                                        <input type="text" name="point" value=<%=users.point%> placeholder="">
                                    </p>
                                </div>
                                <div class="form-group">
                                    <label for="gender" class="text-light">Status</label>
                                    <div class="radio inline">
                                        <input type="radio" id="radio-4" name="admin" value=0 <%=users.admin==false ? 'checked' : false %>>
                                        <label for="radio-4" class="radio-label">Member</label>
                                    </div>
                                    <div class="radio inline">
                                        <input type="radio" id="radio-5" name="admin" value=1 <%=users.admin==true ? 'checked' : false %>>
                                        <label for="radio-5" class="radio-label">Admin</label>
                                    </div>
                                </div>
        
        
        
                                <div class="form-group">
                                    <button type="submit" class="btn btn-success update">Save</button>
                                </div>
                                <br>
                                
                            </div>
        
                        </form>
                </div>
                </div>
                </div>
                <!-- add user form -->
                <!-- form handling -->
               

            </div>

        </main>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" integrity="sha512-bLT0Qm9VnAYZDflyKcBaQ2gg0hSYNQrJ8RilYldYQ1FxQYoCLtUjuuRuZo+fjqhx/qtq/1itJ0C2ejDxltZVFg==" crossorigin="anonymous"></script>
        <script src="/javascript/index.js"></script>
    </body>

</html>