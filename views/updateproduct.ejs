<!DOCTYPE html>
<html lang="en">
<%- include('includes/head'); %>

    <body>
        <%- include('includes/navadmin'); %>
        <main id="site-main">
            <div class="container">
                <div class="box-nav d-flex justify-between">
                    <div class="filter">
                        <a href="/"><i class="fas fa-angle-double-left"></i> All Product</a>
                    </div>
                </div>
                <div class="form-title text-center">
                    <h2 class="text-dark">Update Product</h2>
                    <span class="text-light">Use the below form to Update an product</span>
                </div>

                <!-- add user form -->
                <!-- form handling -->
                <form method="POST" id="updateproduct">
                    <div class="newproduct">
                        <div class="form-group">
                            <label for="img" class="text-light">Image</label>
                            <input type="hidden" name="id" value=<%=product._id %>>
                            <input type="text" name="img" value="<%= product.img %>" placeholder="">
                        </div>
                        <div class="form-group">
                            <label for="name" class="text-light">Name</label>
                            <input type="text" name="name" value="<%= product.name%>" placeholder="">
                        </div>
                        <div class="form-group">
                            <label for="description" class="text-light">Description</label>
                            <input type="text" name="description" value="<%=product.version%>" placeholder="">
                        </div>
                        <div class="form-group">
                            <label for="price" class="text-light">Price</label>
                            <input type="text" name="price" value=<%=product.price%> placeholder="">
                        </div>



                        <div class="form-group">
                            <button type="submit" class="btn text-dark update">Save</button>
                        </div>

                    </div>

                </form>

            </div>

        </main>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" integrity="sha512-bLT0Qm9VnAYZDflyKcBaQ2gg0hSYNQrJ8RilYldYQ1FxQYoCLtUjuuRuZo+fjqhx/qtq/1itJ0C2ejDxltZVFg==" crossorigin="anonymous"></script>
        <script src="/javascript/index.js"></script>
    </body>

</html>