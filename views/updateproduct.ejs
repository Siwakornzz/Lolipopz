                                <div class="form-group">
                                    <p>Description : 
                                        <input type="text" name="description" value="<%=product.version%>" placeholder="">
                                    </p>
                                </div>
                                <div class="form-group">
                                    <p>Price : 
                                        <input type="text" name="price" value="<%=product.price%>" placeholder="">
                                    </p>
                                </div>
        
        
        
                                <div class="form-group">
                                    <button type="submit" class="btn btn-success update">Save</button>
                                </div>
                                <br>
                                
                            </div>
        
                        </form>
                </div></center>
                </div>
                </div>
